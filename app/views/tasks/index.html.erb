<div class="main">
<h2><em>Task list</em></h2>

<ul>
  <% @task.each do |t| %>
    <li class="list">
      <%= link_to task_path(t), method: :delete do %>
        <i class="fas fa-trash">--- </i>
      <% end %>
      <% if t.completed? %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task_path(t.id) do %>
        <%= t.title %>
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Add a task', new_task_path %></p>
</div>
